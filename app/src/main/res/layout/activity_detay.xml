<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.kategori.KategoriActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/imageviev4_width"
        android:layout_height="@dimen/imageviev4_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ilacinkapindalogo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/match_constraint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtUrunBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kategoriler_baslik"
                android:textColor="@color/black"
                android:textSize="@dimen/txturunbaslik_textsize"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgIlacFoto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ilacfoto_height"
                android:layout_margin="@dimen/ilacfoto_margin"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtUrunDetay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>